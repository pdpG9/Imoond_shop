<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/basePadding"
    android:id="@+id/swipeRefresh"
    tools:context=".ui.category.CategoryFragment">
    <LinearLayout
    android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/item_notification_index"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/baseMargin"
                android:layout_weight="1"
                android:background="@drawable/bg_toolbar_search"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/basePadding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/baseIconSize"
                    android:layout_height="@dimen/baseIconSize"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/marginLarge"
                    android:src="@drawable/ic_search"
                    android:tint="@color/black" />

                <TextView
                    tools:text="@string/babies_toys"
                    android:textColor="@color/black"
                    style="@style/SubDescriptionTextStyle"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listCategories"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:itemCount="10"
            tools:listitem="@layout/item_category_large"
            android:layout_marginVertical="@dimen/basePadding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>